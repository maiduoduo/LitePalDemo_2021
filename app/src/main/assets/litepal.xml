<?xml version="1.0" encoding="utf-8"?>
<litepal>
    <!--数据库名字-->
    <dbname value="user" />
    <!--数据库版本-->
    <!--升级情况分析：1.新增表（新增实体类）  2.修改表（修改实体类）
        都需要进行升级处理：数据库版本号+1处理
    -->
    <version value="1" />
    <list>
        <!--根据model映射创建表-->
        <mapping class="come.litepal.sample.model.User" />
    </list>
    <!--将数据库文件存放在sd卡，调试时使用（internal，external）-->
    <!--<storage value="external" />-->
</litepal>

